<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script
      src="https://code.jquery.com/jquery-3.7.1.min.js"
      integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
      crossorigin="anonymous"
    ></script>

    <script
      src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"
      integrity="sha256-lSjKY0/srUM9BE3dPm+c4fBo1dky2v27Gdjm2uoZaL0="
      crossorigin="anonymous"
    ></script>

    <title>Document</title>
  </head>
  <body>
    <form action="/exercise1/axios" method="get" name="form">
        <fieldset>
            <label for="name">이름</label>
            <input type="text" id="name" name="name">
        </fieldset>
        <fieldset>
            <legend>성별</legend>
            <input type="radio" id="sex" name="sex" value="man">
            <label for="sex">남자</label>
            <input type="radio" id="sex" name="sex" value="woman">
            <label for="sex">여자</label>
        </fieldset>
        <fieldset>
            <legend>생년월일</legend>
            <select name="year" id="year">
                <% for (let i=1900; i < 2024; i++) { %>
                <option value=<%= i %>><%= i %></option>
                <% } %>
            </select>
            <label for="year">년</label>
            <select name="month" id="month">
                <% for (let i=1; i < 13; i++) { %>
                    <option value=<%= i %>><%= i %></option>
                <% } %>
            </select>
            <label for="month">월</label>
            <select name="day" id="day">
                <% for (let i=1; i < 32; i++) { %>
                    <option value=<%= i %>><%= i %></option>
                <% } %>
            </select>
            <label for="month">일</label>
        </fieldset>
        <fieldset>
            <legend>관심사</legend>
            <input type="checkbox" name="hobby" id="trip" value="trip">
            <label for="trip">여행</label>
            <input type="checkbox" name="hobby" id="fassion" value="fassion">
            <label for="fassion">패션</label>
            <input type="checkbox" name="hobby" id="food" value="food">
            <label for="food">음식</label>
        </fieldset>
        <button type="button">회원가입</button>
    </form>

    <script>
      const btnElement = document.querySelector("button");
      const bodyElement = document.querySelector("body");
      btnElement.addEventListener("click", async function () {
        const form = document.forms["form"];
        console.log(form.hobby[0].checked);

        console.log(form.hobby[1].checked);
        console.log(form.hobby[2].checked);
        const data = {
          name: form.name.value,
          sex: form.sex.value,
          year: form.year.value,
          month: form.month.value,
          day: form.day.value,
          hobby1: form.hobby[0].checked,
          hobby2: form.hobby[1].checked,
          hobby3: form.hobby[2].checked,
        };
        console.log(data)
        const response = await axios({
          method: "get",
          url: "/exercise1/axios",
          params: data,
        });
        $("body").append(JSON.stringify(response.data));
      });
    </script>
  </body>
</html>
