<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <form action="/exercise2/signUp" method="post" onsubmit="return checkForm(this)">
        <fieldset>
            <label for="name">이름</label>
            <input type="text" id="name" name="name">
        </fieldset>
        <fieldset>
            <legend>성별</legend>
            <input type="radio" id="sex" name="sex" value="man">
            <label for="sex">남자</label>
            <input type="radio" id="sex" name="sex" value="woman">
            <label for="sex">여자</label>
        </fieldset>
        <fieldset>
            <legend>생년월일</legend>
            <select name="year" id="year">
                <% for (let i=1900; i < 2024; i++) { %>
                <option value=<%= i %>><%= i %></option>
                <% } %>
            </select>
            <label for="year">년</label>
            <select name="month" id="month">
                <% for (let i=1; i < 13; i++) { %>
                    <option value=<%= i %>><%= i %></option>
                <% } %>
            </select>
            <label for="month">월</label>
            <select name="day" id="day">
                <% for (let i=1; i < 32; i++) { %>
                    <option value=<%= i %>><%= i %></option>
                <% } %>
            </select>
            <label for="month">일</label>
        </fieldset>
        <fieldset>
            <legend>이메일</legend>
            <label for="email">이메일</label>
            <input type="email" id="email" name="email">
        </fieldset>
        <fieldset>
            <legend>사랑하는 만큼</legend>
            <input type="range" name='range'>
        </fieldset>
        <button>회원가입</button>
    </form>

    <script>
        function checkForm(form) {
            if(!form.name.value) {
                alert('이름입력해줘요');
                return false;
            }
            if(!form.sex[0].checked && !form.sex[1].checked) {
                alert('성별입력해줘요');
                return false;
            }
        }
    </script>
</body>
</html>